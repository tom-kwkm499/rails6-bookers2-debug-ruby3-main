<div class= "row">
  <div class="col-12  d-flex justify-content-center pt-1">
    <%= form_with url: search_path, method: :get, local: true do |f| %>

      <%= f.text_field :query, required: true %>

      <%= f.select :search_type, [['User', 'User'], ['Book', 'Book']] %>

      <%= f.select :match_type, [['完全一致', 'perfect'], ['前方一致', 'forward'], ['後方一致', 'backward'], ['部分一致', 'partial']] %>

      <%= f.submit "検索" %>
    <% end %>
  </div>
</div>